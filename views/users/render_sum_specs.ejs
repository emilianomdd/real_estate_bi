<% layout('layouts/boilerplate') %>

    <div style="max-width: 960px; margin: 0 auto; padding: 20px;">

        <!-- First Row -->
        <div style="display: flex; justify-content: space-between; margin-bottom: 40px;">

            <!-- Graph -->
            <div style="flex: 0 0 65%; padding: 15px;">
                <canvas id="myChart1"></canvas>
            </div>

            <!-- Right Side Forms & Buttons -->
            <div style="flex: 0 0 30%;">

                <!-- Zip Selection Form -->
                <div class="form-container my-3 p-3 bg-light rounded mb-3">
                    <form action="/render_zip_sum">
                        <div class="dropdown mb-3">
                            <button class="btn btn-secondary dropdown-toggle w-100" type="button" id="zipDropdown"
                                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Select Zip Codes
                            </button>
                            <div class="dropdown-menu w-100" aria-labelledby="zipDropdown">
                                <% for (let zip of zips) { %>
                                    <div class="d-flex align-items-center px-3">
                                        <input type="checkbox" class="mr-2" id="<%=zip%>" name="zip" value="<%=zip%>">
                                        <label for="<%=zip%>">
                                            <%=zip%>
                                        </label>
                                    </div>
                                    <% } %>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-success w-100">Submit</button>
                    </form>
                </div>

                <!-- Specifications Form -->
                <div class="form-container p-3 bg-light rounded mb-3">
                    <form action="/render_zip_sum_specs">
                        <fieldset>
                            <legend>Property Specifications:</legend>
                            <label for="pool">Pool Spec:</label>
                            <select name="pool" id="pool">
                                <option value="yes">Yes</option>
                                <option value="no">No</option>
                            </select><br>

                            <label for="price_range">Price Range:</label>
                            <select name="price_range" id="price_range">
                                <option value="1.2">1.2 - 1.4M</option>
                                <option value="1.7">1.7 - 2.1M</option>
                                <option value="2.7">2.7 - 3.5M</option>
                            </select><br>

                            <label for="garage_spaces"># of Garage Spaces:</label>
                            <select name="garage_spaces" id="garage_spaces">
                                <option value="0">0</option>
                                <option value="1">1</option>
                                <option value="2">2</option>
                            </select>
                        </fieldset>
                        <button type="submit" class="btn btn-success w-100 mt-3">Submit</button>
                    </form>
                </div>

                <!-- Excel Button Form -->
                <div class="form-container p-3 bg-light rounded">
                    <form action="/do_excel_specs">
                        <input type="hidden" id="zip" name="zip" value="<%=reqd_zips%>">
                        <input type="hidden" name="specs" id="specs" value="<%=JSON.stringify(specs, null, 2)%>">
                        <button type="submit" class="btn btn-success w-100">Create Excel With Properties in
                            Graph</button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Chart Script -->
        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
        <script>
            var volumes = <%- JSON.stringify(sums) %>;
            var name = <%- JSON.stringify(name) %>;
            var dates = <%- JSON.stringify(segments) %>;
            const ctx1 = document.getElementById('myChart1');
            new Chart(ctx1, {
                type: 'line',
                data: {
                    labels: dates,
                    datasets: [{
                        label: `${name}`,
                        data: volumes,
                        borderWidth: 1
                    }]
                }
            });
        // Add additional chart initializations if needed
        </script>
    </div>