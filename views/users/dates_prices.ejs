<% layout('layouts/boilerplate')%>


    <div class="container">
        <div class="row">
            <div class="col-8">
                <canvas id="myChart"></canvas>
            </div>
            <div class="mt-6 col-4">
                <form action="/render_zip_prices">
                    <label for="zip">Look up a specific Zip Codes:</label>
                    <% for (let zip of zips){ %>
                        <input type="checkbox" id="<%=zip%>" name="zip" value="<%=zip%>">
                        <label for="<%=zip%>"><%=zip%></label>
                    <%}%>
                    <button>submit</button>
                </form>
            </div>

        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>

        var volumes = <%- JSON.stringify(closing_price) %>;
        var name = <%- JSON.stringify(name) %>;
        var dates = <%- JSON.stringify(closing_date) %>;
        const ctx = document.getElementById('myChart');

        new Chart(ctx, {
            type: 'line',
            data: {
                labels: dates,
                datasets: [{
                    label: `${name}`,
                    data: volumes,
                    borderWidth: 1
                }]
            }

        });
    </script>